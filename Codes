package org.example.controller;

import org.example.model.MergedEntity;
import org.example.service.EntityMergerService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import java.util.List;
import java.util.Optional;

@RestController
@RequestMapping("/entity")
public class KycController {

    @Autowired
    private EntityMergerService service;

    public KycController(EntityMergerService service) {
        this.service = service;
    }

    // Endpoint to get all merged data
    @GetMapping
    public List<MergedEntity> getMergedData() {
        return service.getAll();
    }

    // Endpoint to refresh data from APIs
    @GetMapping("/refresh")
    public String refreshData() {
        service.refreshData();
        return "Data refreshed successfully";
    }

    // Endpoint to get merged data by sector
    @GetMapping("/sector/{sector}")
    public List<MergedEntity> getBySector(@PathVariable String sector) {
        return service.getBySector(sector);
    }

    // Endpoint to get merged data by identifier
    @GetMapping("/identifier/{ptyId}")
    public Optional<MergedEntity> getByIdentifier(@PathVariable String ptyId) {
        Identifiers identifier = new Identifiers();
        identifier.setPtyId(ptyId);
        return service.getByIdentifier(identifier);
    }
}
