package com.example.controller;

import com.example.model.MergedEntity;
import com.example.service.KycMergeService;
import lombok.RequiredArgsConstructor;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

import java.util.List;
import java.util.Optional;

@RestController
@RequestMapping("/kyc")
@RequiredArgsConstructor
public class KycController {

    private final KycMergeService kycMergeService;

    @PostMapping("/merge")
    public ResponseEntity<String> mergeData() {
        kycMergeService.loadAndMergeData();
        return ResponseEntity.ok("Data merged successfully");
    }

    @GetMapping("/entities")
    public ResponseEntity<List<MergedEntity>> getAllEntities() {
        return ResponseEntity.ok(kycMergeService.getAllMergedEntities());
    }

    @GetMapping("/entity/{ptyId}")
    public ResponseEntity<MergedEntity> getEntityByIdentifier(@PathVariable String ptyId) {
        return kycMergeService.getEntityByIdentifier(ptyId)
                .map(ResponseEntity::ok)
                .orElse(ResponseEntity.notFound().build());
    }

    @GetMapping("/entities/risk/{riskLevel}")
    public ResponseEntity<List<MergedEntity>> getEntitiesByRiskLevel(
            @PathVariable String riskLevel) {
        return ResponseEntity.ok(kycMergeService.getEntitiesByRiskLevel(riskLevel));
    }
}
