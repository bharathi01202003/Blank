String rawHost = "api-uat.staging.echonet";
String rawUrl = "https://172.26.1.45/oauth2/v1/token?grant_type=client_credentials";

Map<String, Object> response = webClient.post()
        .uri(rawUrl)
        .header("Accept", "*/*;version=gamma")
        .header("Authorization", "Basic " + basicToken)
        .header("Host", rawHost)  // <-- spoof the real host
        .retrieve()
        .bodyToMono(new ParameterizedTypeReference<>() {})
        .block();
