import com.fasterxml.jackson.core.type.TypeReference;
import com.fasterxml.jackson.databind.ObjectMapper;
import org.springframework.core.io.ClassPathResource;
import org.springframework.stereotype.Service;
import java.io.InputStream;
import java.util.List;

@Service
public class YourServiceClass {

    private final RecordRepository recordRepository; // Your JPA repo
    private final Logger logger = LoggerFactory.getLogger(YourServiceClass.class);

    public YourServiceClass(RecordRepository recordRepository) {
        this.recordRepository = recordRepository;
    }

    public void saveMergedRecordsFromFile() {
        try {
            ObjectMapper mapper = new ObjectMapper();
            InputStream inputStream = new ClassPathResource("merged_entities.json").getInputStream();

            // Directly read as list of MergedEntityRecord (no transformation)
            List<MergedEntityRecord> records = mapper.readValue(inputStream, new TypeReference<>() {});

            recordRepository.saveAll(records);
            logger.info("All merged records saved directly to H2 database.");
        } catch (Exception ex) {
            logger.error("Failed to load records from file", ex);
        }
    }
}


@PostConstruct
public void init() {
    saveMergedRecordsFromFile();
}
